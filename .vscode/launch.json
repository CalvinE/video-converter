{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-r",
				"ts-node/register",
				"-u",
				"bdd",
				"--timeout",
				"999999999",
				"--colors",
				"${workspaceFolder}/src/test/**/*.test.ts"
			],
			"internalConsoleOptions": "openOnSessionStart",
			// "preLaunchTask": "Build required test docker containers",
			// "postDebugTask": "Destroy test docker containers",
			// "preLaunchTask": "powershell ${workspaceFolder}/test/scripts/handle_test_infrastructure.ps1 -Start",
			// "postDebugTask": "powershell ${workspaceFolder}/test/scripts/handle_test_infrastructure.ps1 -Stop",
			"protocol": "inspector",
			// "console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Test GetInfo",
			"program": "${workspaceFolder}/build/index.js",
			"args": [
				"--targetFileNameRegex",
				".*\\.mp4",
				"--getInfo",
				"--sourcePath",
				"F:\\source"
			],
			"protocol": "inspector",
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Test ConvertVideo",
			"program": "${workspaceFolder}/build/index.js",
			"args": [
				"--targetFileNameRegex",
				".*\\.(mp4|mkv)",
				"--convertVideo",
				"--sourcePath",
				"F:\\source",
				"--targetVideoEncoder",
				"libx265",
				"--copyRelativeFolderPath",
				"--savePath",
				"F:\\result"
			],
			"protocol": "inspector",
		}, // libx265
	]
}